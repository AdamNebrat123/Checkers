<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="{StaticResource PrimaryDark}"
             FlowDirection="LeftToRight">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- User Name -->
            <Label Text="{Binding FullName}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource LightText}" />

            <Label Text="{Binding UserName}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource LightText}" />

            <!-- Profile Details -->
            <Frame CornerRadius="12"
                   Padding="20"
                   BackgroundColor="{StaticResource SecondaryDark}"
                   HasShadow="False">

                <VerticalStackLayout Spacing="18">

                    <!-- Full Name -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Full Name:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text=""
                               x:Name="FullName"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                    <!-- Username -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Username:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text=""
                               x:Name="UserName"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                    <!-- Email -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Email:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text=""
                               x:Name="Email"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                    <!-- Mobile -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Mobile:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text=""
                               x:Name="MobileNo"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                    <!-- Password -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Password:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text="********"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                    <!-- Birth Date -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Birth Date:"
                               FontAttributes="Bold"
                               TextColor="{StaticResource LightText}" />

                        <Label Text=""
                               x:Name="BirthDate"
                               Grid.Column="1"
                               TextColor="{StaticResource LightText}" />
                    </Grid>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
