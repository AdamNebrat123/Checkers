<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.ProfilePage"
             Title="ProfilePage"
             FlowDirection="LeftToRight">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame CornerRadius="100" HeightRequest="120" WidthRequest="120" 
                   HorizontalOptions="Center" BackgroundColor="#E0E0E0" HasShadow="True">
                <Label Text="ðŸ‘¤" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Label Text="{Binding FullName}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Label Text="{Binding UserName}" 
                   FontSize="16" 
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Profile Details -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Full Name:" FontAttributes="Bold" />
                        <Label Text="{Binding FullName}" Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Username:" FontAttributes="Bold" />
                        <Label Text="{Binding UserName}" Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Email:" FontAttributes="Bold" />
                        <Label Text="{Binding Email}" Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Mobile:" FontAttributes="Bold" />
                        <Label Text="{Binding MobileNo}" Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Password:" FontAttributes="Bold" />
                        <Label Text="********" Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Birth Date:" FontAttributes="Bold" />
                        <Label Text="{Binding BirthDate, StringFormat='{0:dd MMM yyyy}'}" Grid.Column="1" />
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Edit Button -->
            <Button Text="Edit Profile" 
                    BackgroundColor="#007AFF" 
                    TextColor="White" 
                    CornerRadius="10"
                    HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>