<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Checkers.Views.CreateGame"
    Title="Create Game">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <!-- Choose Colors -->
            <Label 
                Text="Choose Colors"
                FontSize="24"
                HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label 
                        Text="You"
                        FontSize="20"
                        HorizontalOptions="Center" />

                    <ImageButton 
                        x:Name="PlayerImage"
                        Source="white_piece.png"
                        WidthRequest="80"
                        HeightRequest="80"
                        BackgroundColor="Transparent" />
                </VerticalStackLayout>

                <Button 
                    Text="SWITCH"
                    FontSize="18"
                    Style="{StaticResource SecondaryButton}"
                    Padding="15,10"
                    Clicked="OnSwitchClicked"
                    VerticalOptions="Center" />

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label 
                        Text="Opponent"
                        FontSize="20"
                        HorizontalOptions="Center" />

                    <ImageButton 
                        x:Name="OpponentImage"
                        Source="black_piece.png"
                        WidthRequest="80"
                        HeightRequest="80"
                        BackgroundColor="Transparent" />
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <!-- Timer Picker -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Game Time"
                       TextColor="White"
                       FontSize="22"
                       HorizontalOptions="Center"/>
                <Picker x:Name="TimerPicker"
                        Title="Select time"
                        TitleColor="Gray"
                        TextColor="White"
                        WidthRequest="200"
                        SelectedIndex="1">
                    <!-- ברירת מחדל 10 דקות -->
                    <Picker.Items>
                        <x:String>30 minutes</x:String>
                        <x:String>10 minutes</x:String>
                        <x:String>5 minutes</x:String>
                        <x:String>1 minute</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>
            
            <!-- Create Button -->
            <Button 
                Text="CREATE GAME"
                FontSize="26"
                WidthRequest="220"
                HeightRequest="60"
                HorizontalOptions="Center"
                Style="{StaticResource SecondaryButton}"
                Clicked="OnCreateGameClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
