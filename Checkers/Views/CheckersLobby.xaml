<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.CheckersLobby"
             Title="Checkers Lobby"
             BackgroundColor="#F5F5F5"
             FlowDirection="LeftToRight">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Header -->
        <Label Text="Available Games"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"/>

        <!-- Collection of Games -->
        <CollectionView SelectionMode="Single"
                        HeightRequest="500">

            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>GAME1 - 1/2</x:String>
                    <x:String>GAME2 - 1/2</x:String>
                    <x:String>GAME3 - 1/2</x:String>
                    <x:String>GAME4 - 1/2</x:String>
                    <x:String>GAME5 - 1/2</x:String>
                </x:Array>
            </CollectionView.ItemsSource>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True"
                           BackgroundColor="White">

                        <VerticalStackLayout Spacing="5">

                            <!-- Game Name -->
                            <Label Text="{Binding .}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>

                            <!-- Game Creator -->
                            <Label Text="Created by: USER123"
                                   FontSize="14"
                                   TextColor="Gray"/>

                            <!-- Join Button -->
                            <Button Text="Join"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Padding="10,5"
                                    HorizontalOptions="End"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
