<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.HomePage"
             Title="HomePage">
    <Grid
        Padding="30"
        HorizontalOptions="Center"
        RowSpacing="20"
        VerticalOptions="Center">
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>



        <!--  Label  -->
        <Label
            Grid.Row="0"
            Text="Welcome to the Checkers!" />

        <Image Grid.Row="1" Source="app_logo.png" />
        <!--  Login Button  -->
        <Button
            Grid.Row="2"
            Command="{Binding GoToCreateGame}"
            Text="Create Game" />

        <!--  Register Button  -->
        <Button
            Grid.Row="3"
            Command="{Binding JoinRandomGame}"
            Text="Join Random Game" />
    </Grid>
</ContentPage>