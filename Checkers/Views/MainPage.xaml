<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Checkers.Views.MainPage"
    BackgroundColor="{StaticResource PrimaryDark}">

    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Padding="30"
            Spacing="25">

            <!-- Title -->
            <Label
                Text="Welcome to Checkers"
                TextColor="{StaticResource LightText}"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <!-- Logo -->
            <Frame 
                BackgroundColor="{StaticResource SecondaryDark}"
                Padding="5"
                CornerRadius="20"
                HasShadow="False"
                HorizontalOptions="Center">
                <Frame
                    Padding="0"
                    CornerRadius="20"
                    HasShadow="False"
                    BackgroundColor="Transparent"
                    HeightRequest="150"
                    WidthRequest="150"
                    IsClippedToBounds="True">

                    <Image
                        Source="checkersicon.png"
                        Aspect="AspectFill" />
                </Frame>
            </Frame>

            <!-- Buttons -->
            <VerticalStackLayout Spacing="15" WidthRequest="250">
                <Button
                    Text="Login"
                    Command="{Binding GoToLoginCommand}" />
                <Button
                    Text="Register"
                    Command="{Binding GoToRegisterCommand}" />
                <Button
                    Text="Play VS AI"
                    Clicked="PlayVSai_Clicked" />
                <Button
                    Text="Skip Login"
                    Clicked="SkipLogIn_Clicked"
                    BackgroundColor="Transparent"
                    BorderWidth="1.5"
                    BorderColor="{StaticResource AccentGreen}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
