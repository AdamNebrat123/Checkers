<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Checkers.Views.MainPage"
    >

    <ScrollView>
        <VerticalStackLayout 
            Padding="30"
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- Title -->
            <Label
                Text="Welcome to Checkers"
                TextColor="#ECDFCC"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <!-- Logo -->
            <Frame 
                BackgroundColor="#3C3D37"
                Padding="20"
                CornerRadius="20"
                HasShadow="False"
                HorizontalOptions="Center">
                <Image 
                    Source="app_logo.png"
                    HeightRequest="120"
                    WidthRequest="120" />
            </Frame>

            <!-- Navigation Buttons -->
            <VerticalStackLayout Spacing="15" WidthRequest="250">

                <Button
                    Text="Login"
                    Command="{Binding GoToLoginCommand}"
                    BackgroundColor="#697565"
                    TextColor="#ECDFCC"
                    CornerRadius="12"
                    HeightRequest="50" />

                <Button
                    Text="Register"
                    Command="{Binding GoToRegisterCommand}"
                    BackgroundColor="#3C3D37"
                    TextColor="#ECDFCC"
                    CornerRadius="12"
                    HeightRequest="50" />

                <Button
                    Text="Play VS AI"
                    x:Name="OnGoToGamePage"
                    Clicked="PlayVSai_Clicked"
                    BackgroundColor="#697565"
                    TextColor="#ECDFCC"
                    CornerRadius="12"
                    HeightRequest="50" />

                <Button
                    Text="Skip Login"
                    x:Name="SkipLogIn"
                    Clicked="SkipLogIn_Clicked"
                    BackgroundColor="Transparent"
                    TextColor="#ECDFCC"
                    BorderWidth="1.5"
                    BorderColor="#697565"
                    CornerRadius="12"
                    HeightRequest="50" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
