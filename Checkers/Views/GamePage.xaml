<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Checkers.Views.GamePage"
             xmlns:converters="clr-namespace:Checkers.Converters"
             Title="GamePage"
             BackgroundColor="#2b2b2b">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:SquareToColorConverter x:Key="SquareToColorConverter"/>
            <converters:MarkerSizeConverter x:Key="MarkerSizeConverter"/>
            <converters:CellSizeConverter x:Key="CellSizeConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="RootGrid" Padding="0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2b2b2b" Offset="0.0" />
                <GradientStop Color="#222223" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

            <!-- Top player card -->
            <StackLayout Grid.Row="0"
                         Padding="12,18,12,8"
                         HorizontalOptions="End"
                         VerticalOptions="Center">
                <Frame BackgroundColor="#333538"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="10"
                       HorizontalOptions="Center">
                    <VerticalStackLayout>
                    <StackLayout Spacing="6" HorizontalOptions="Center">
                        <Label Text="{Binding OpponentName}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#F0F0F0"
                               HorizontalOptions="Center"/>

                        <BoxView x:Name="TopHighlight"
                                 HeightRequest="6"
                                 WidthRequest="120"
                                 BackgroundColor="#4CAF50"
                                 Opacity="0.15" />
                        
                    </StackLayout>
                    
                    <!-- Opponent timer -->
                        <Label x:Name="OpponentTimerLabel"
                        TextColor="{StaticResource LightText}"
                        FontSize="22"
                        HorizontalOptions="Center" 
                        IsVisible="False"/>
                    </VerticalStackLayout>
                </Frame>
            </StackLayout>


            <!-- Board center -->
            <Grid Grid.Row="1"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  x:Name="BoardGrid"
                  WidthRequest="{Binding BoardSize}"
                  HeightRequest="{Binding BoardSize}">

                <CollectionView ItemsSource="{Binding BoardVM.Squares}"
                                WidthRequest="{Binding BoardSize}"
                                HeightRequest="{Binding BoardSize}"
                                ItemSizingStrategy="MeasureAllItems"
                                Margin="0">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="8" HorizontalItemSpacing="0" VerticalItemSpacing="0"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <BoxView Color="{Binding IsDark, Converter={StaticResource SquareToColorConverter}}"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Fill" />

                                <Image Source="{Binding PieceImage}"
                                       Aspect="AspectFit"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       MinimumWidthRequest="{Binding Source={x:Reference BoardGrid}, Path=Width, Converter={StaticResource CellSizeConverter}}"
                                       MinimumHeightRequest="{Binding Source={x:Reference BoardGrid}, Path=Height, Converter={StaticResource CellSizeConverter}}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SquareClickedCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>

                                <Ellipse WidthRequest="{Binding Source={x:Reference BoardGrid}, Path=Width, Converter={StaticResource MarkerSizeConverter}}"
                                         HeightRequest="{Binding Source={x:Reference BoardGrid}, Path=Height, Converter={StaticResource MarkerSizeConverter}}"
                                         Fill="Gray"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         IsVisible="{Binding HasMoveMarker}">
                                    <Ellipse.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SquareClickedCommand}" />
                                    </Ellipse.GestureRecognizers>
                                </Ellipse>

                                <Button BackgroundColor="Transparent"
                                        Command="{Binding SquareClickedCommand}"
                                        HorizontalOptions="Fill"
                                        VerticalOptions="Fill"
                                        BorderWidth="0"
                                        Opacity="0" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>

            <!-- Bottom player card -->
            <StackLayout Grid.Row="2"
                         Padding="12,8,12,18"
                         HorizontalOptions="End"
                         VerticalOptions="Center">
                <Frame BackgroundColor="#333538"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="10"
                       HorizontalOptions="Center">
                    <VerticalStackLayout>
                        <StackLayout Spacing="6" HorizontalOptions="Center">
                            <Label Text="{Binding PlayerName}"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    TextColor="#F0F0F0"
                                    HorizontalOptions="Center"/>

                            <BoxView x:Name="BottomHighlight"
                                        HeightRequest="6"
                                        WidthRequest="120"
                                        BackgroundColor="#4CAF50"
                                        Opacity="0.15" />
                        </StackLayout>
                        
                        <!-- Player timer -->
                        <Label x:Name="PlayerTimerLabel"
                            TextColor="{StaticResource LightText}"
                            FontSize="22"
                            HorizontalOptions="Center" 
                            IsVisible="False"/>
                    </VerticalStackLayout>
                </Frame>
            </StackLayout>
        </Grid>

        <!-- Captured indicators on the left -->
        <StackLayout Orientation="Horizontal"
                     Spacing="4"
                     Padding="10"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="12,18,0,0">
            <Image Source="{Binding OpponentPieceImage}"
                   HeightRequest="40"
                   WidthRequest="40"/>
            <Label Text="x"
                   FontSize="24"
                   TextColor="#CCC"
                   VerticalOptions="Center"/>
            <Label Text="{Binding OpponentCapturedCount}"
                   FontSize="24"
                   TextColor="#CCC"
                   VerticalOptions="Center"/>
        </StackLayout>
        
        
        <VerticalStackLayout VerticalOptions="End">
            <!-- Move history controls (bottom center) -->

            <StackLayout
                Orientation="Horizontal"
                Spacing="10"
                Padding="1"
                VerticalOptions="End"
                Margin="0,0,0,20"
                IsVisible="{Binding HasBoardSnapshotHistory}">

                <Button
                    Text="⇨"
                    FontSize="24"
                    TextColor="{StaticResource LightText}"
                    />

                <Button
                    Text="⇦"
                    FontSize="24"
                    TextColor="{StaticResource LightText}"
                    />


            </StackLayout>

            <!-- PlayerCapturedCount -->
            <StackLayout Orientation="Horizontal"
                 Spacing="4"
                 Padding="10"
                 HorizontalOptions="Start"
                 VerticalOptions="End"
                 Margin="12,0,0,18">

                <Image Source="{Binding PlayerPieceImage}"
                   HeightRequest="40"
                   WidthRequest="40"/>
                <Label Text="x"
                    FontSize="24"
                    TextColor="#CCC"
                    VerticalOptions="Center"/>
                <Label Text="{Binding PlayerCapturedCount}"
                    FontSize="24"
                    TextColor="#CCC"
                    VerticalOptions="Center"/>
            </StackLayout>
        </VerticalStackLayout>
        
        
        

        <ContentView 
            x:Name="WinnerContentView"
            IsVisible="False"
            BackgroundColor="#80000000"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            Opacity="{Binding WinnerOpacity}">

            <Frame Padding="20"
                   BackgroundColor="{StaticResource SecondaryDark}"
                   CornerRadius="20"
                   WidthRequest="260"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   x:Name="PopupFrame">

                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding WinnerName}"
                           TextColor="{StaticResource LightText}"
                           FontSize="20"
                           HorizontalOptions="Center"/>

                    <Button Text="Close"
                            Clicked="OnWinnerCloseClicked"/>
                </VerticalStackLayout>
            </Frame>
        </ContentView>

    </Grid>
</ContentPage>
