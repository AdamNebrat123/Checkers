<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- COLORS -->
    <Color x:Key="PrimaryDark">#1E201E</Color>
    <Color x:Key="SecondaryDark">#3C3D37</Color>
    <Color x:Key="AccentGreen">#697565</Color>
    <Color x:Key="LightText">#ECDFCC</Color>
    <Color x:Key="Test">#ff0000</Color>

    <Color x:Key="Light">#ECDFCC</Color>


    

    <!-- LABEL -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LightText}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- ENTRY -->
    <Style TargetType="Entry">
        <!-- רקע שקוף -->
        <Setter Property="BackgroundColor" Value="Transparent" />

        <!-- טקסט -->
        <Setter Property="TextColor" Value="{StaticResource LightText}" />

        <!-- Placeholder -->
        <Setter Property="PlaceholderColor" Value="{StaticResource LightText}" />
        

        <!-- רווחים -->
        <Setter Property="Margin" Value="0,5" />

        <!-- הגדרות מקלדת -->
        <Setter Property="Keyboard" Value="Default" />
        <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
    </Style>


    <!-- BUTTON BASE STYLE -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentGreen}" />
        <Setter Property="TextColor" Value="{StaticResource LightText}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- SECONDARY BUTTON (כהה) -->
    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDark}" />
        <Setter Property="TextColor" Value="{StaticResource LightText}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- OUTLINE BUTTON -->
    <Style TargetType="Button" x:Key="OutlinedButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource LightText}" />
        <Setter Property="BorderWidth" Value="1.5" />
        <Setter Property="BorderColor" Value="{StaticResource AccentGreen}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- FRAME STYLE (ללוגו או כרטיסים) -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDark}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="20" />
    </Style>




    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource AccentGreen}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource Light}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource LightText}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource Light}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource Light}" />
        
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource AccentGreen}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource LightText}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource LightText}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource LightText}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource Test}" />
        <Setter Property="BarTextColor" Value="{StaticResource Test}" />
        <Setter Property="IconColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource Test}" />
        <Setter Property="BarTextColor" Value="{StaticResource Test}" />
        <Setter Property="UnselectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="SelectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
    </Style> 
    



</ResourceDictionary>
